CREATE TABLE role (
	id INTEGER PRIMARY KEY,
	name TEXT NOT NULL,
);

CREATE TABLE user(
	id INTEGER PRIMARY KEY,
	name TEXT NOT NULL,
	password TEXT
	isValid boolean
	roleId INTEGER
	FOREIGN KEY(roleId) REFERENCES role(id)
);


CREATE TABLE message(
	id INTEGER PRIMARY KEY,
	name TEXT NOT NULL,
	dateReceipt TEXT,
	sender INTEGER,
	recipient INTEGER,
	subjectd Text,
	body Text
);
